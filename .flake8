[flake8]
# ROS 2 Python Style Guide compliance + Black compatibility
max-line-length = 88
extend-ignore = E203, E266, E501, W503
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .eggs,
    node_modules

# Per-file ignores
per-file-ignores =
    __init__.py:F401

# Warnings
docstring-convention = google
